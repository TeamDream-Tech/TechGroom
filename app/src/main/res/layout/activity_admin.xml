<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:id="@+id/newstitle"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_margin="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Detail of Post"
            android:paddingLeft="5dp"
            android:id="@+id/newsdetail"
            android:paddingRight="5dp"
            android:layout_margin="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Image Url"
            android:paddingLeft="5dp"
            android:id="@+id/newsimgurl"
            android:paddingRight="5dp"
            android:layout_margin="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Other Image Url"
            android:paddingLeft="5dp"
            android:id="@+id/addnewsimgurl"
            android:paddingRight="5dp"
            android:layout_margin="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Verify with source link"
            android:paddingLeft="5dp"
            android:id="@+id/sourcelink"
            android:paddingRight="5dp"
            android:layout_margin="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Verify with source link"
            android:paddingLeft="5dp"
            android:id="@+id/gerne"
            android:paddingRight="5dp"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/uploadnews"
            android:text="Upload News Updates"/>

    </LinearLayout>

</RelativeLayout>