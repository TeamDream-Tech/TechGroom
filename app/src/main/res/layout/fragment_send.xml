<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardElevation="18dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We at Techgroom sees customer satisfaction as a priority, send us a feedback to help us improve in our services."
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#fff"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:id="@+id/toptext"
                    />

                <Spinner
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/firstone"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/toptext" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:id="@+id/edit_text"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/firstone"
                    app:hintTextColor="@color/white"
                    android:textColorHint="@color/Splashscreen"
                    android:layout_marginTop="30dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:minHeight="35dp"
                        android:padding="10dp"
                        android:paddingRight="7dp"
                        android:outlineAmbientShadowColor="@color/black"
                        android:maxLength="2250"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/messageinput"
                        android:background="@drawable/button_bg_rounded_corners"
                        android:hint="Please Provide your feedback here"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="15dp"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:text="Send"
                    android:id="@+id/feedbackbtn"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:layout_below="@id/edit_text"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="10dp"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:src="@drawable/roundbutton"/>
    </LinearLayout>
</RelativeLayout>