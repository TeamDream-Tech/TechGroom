<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Profile_Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:cardElevation="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile"
                app:civ_border_color="@color/black"
                app:civ_border_width="3dp"
                android:id="@+id/edit_profpic"
                android:layout_marginTop="17dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHANGE AVATAR"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:layout_below="@id/edit_profpic"
                android:textSize="10dp"
                android:id="@+id/toptext"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/toptext"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:textSize="12dp"
                android:text="Name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:layout_below="@id/toptext"
                android:layout_marginTop="89dp"
                android:textSize="12dp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="number"
                android:layout_below="@id/toptext"
                android:layout_marginTop="160dp"
                android:textSize="12dp"
                android:layout_marginLeft="25dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:id="@+id/edit_text"
                android:layout_below="@id/toptext"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp">
                <EditText
                    android:textCursorDrawable="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:maxLength="2250"
                    android:textColor="@color/Splashscreenback"
                    android:id="@+id/edit_profname"
                    android:textColorHint="#fff"
                    android:textSize="13dp"
                    android:inputType="textPersonName"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:id="@+id/edit_text2"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text"
                android:layout_marginTop="20dp">
                <EditText
                    android:textCursorDrawable="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_text"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:maxLength="2250"
                    android:textColor="@color/Splashscreenback"
                    android:id="@+id/edit_profemail"
                    android:textColorHint="#fff"
                    android:textSize="15dp"
                    android:inputType="textEmailAddress"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:id="@+id/edit_text3"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text2"
                android:layout_marginTop="20dp">
                <EditText
                    android:textCursorDrawable="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_text"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:maxLength="11"
                    android:textColor="@color/Splashscreenback"
                    android:id="@+id/edit_profnumber"
                    android:textColorHint="#fff"
                    android:textSize="15dp"
                    android:inputType="number"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="SAVE"
                android:gravity="center"
                android:id="@+id/saveprofile"
                android:background="@color/white"
                android:layout_below="@+id/edit_text3"
                android:layout_marginTop="10dp"
                android:shadowColor="@color/white"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>